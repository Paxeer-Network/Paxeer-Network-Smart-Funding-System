# ===================================
# Paxeer Smart Wallets - Environment Variables
# ===================================
# Copy this file to .env and fill in the values

# ---- Chain / RPC ----
RPC_URL_PAXEER=https://public-rpc.paxeer.app/rpc
# RPC_URL_MAINNET=
# RPC_URL_TESTNET=
# ETHERSCAN_API_KEY=

# ---- Admin Wallet (used by service workers to assign wallets & fund) ----
ADMIN_PRIVATE_KEY=

# ---- Contract Addresses (Paxeer Network) ----
WALLET_FACTORY_ADDRESS=0xec0f990c01a3571259Be6183Ec8ED25a0aC67AD6
EVENT_EMITTER_ADDRESS=0x5fF05F82928C9f742AAF8Ac03dBEFbeaDC493a58
USDL_TOKEN_ADDRESS=

# ---- Backend Servers ----
DATABASE_URL=postgresql://paxeer:paxeer@localhost:5432/paxeer_funding
API_PORT=3000
JWT_SECRET=change-me-to-a-secure-random-string
JWT_EXPIRES_IN=7d

# ---- Moralis API (transaction history verification) ----
MORALIS_API_KEY=

# ---- Eligibility ----
MIN_QUALITY_TRANSACTIONS=20
TX_HISTORY_MONTHS=2

# ---- Funding ----
FUNDING_AMOUNT=100

# ---- Service Workers ----
ASSIGNMENT_POLL_INTERVAL=10000
FUNDING_POLL_INTERVAL=15000

# ---- Graph Indexer ----
SUBGRAPH_NAME=paxeer/smart-wallets
GRAPH_NODE_URL=http://localhost:8000

# ---- Wallet Stats SDK (Sidiora User Stats API) ----
VITE_WALLET_STATS_API_URL=https://us-east-1.user-stats.sidiora.exchange

# ---- General ----
NODE_ENV=development
